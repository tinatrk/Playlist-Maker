<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ScreenCommonStyle">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="ToolbarBaseStyle" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.Toolbar.Title</item>
    </style>

    <style name="ToolbarColorOnPrimaryStyle" parent="ToolbarBaseStyle">
        <item name="titleTextColor">?attr/colorOnPrimary</item>
    </style>

    <style name="ToolbarWithIconBaseStyle" parent="ToolbarBaseStyle">
        <item name="navigationIcon">@drawable/ic_arrow_back_24</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="titleMarginStart">@dimen/indentation_8</item>
    </style>

    <style name="ToolbarWithIconColorOnPrimaryStyle" parent="ToolbarWithIconBaseStyle">
        <item name="navigationIconTint">?attr/colorOnPrimary</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TextAppearance.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">@dimen/letter_spacing_0</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:gravity">start</item>
    </style>


    <style name="BtnMainScreenBaseStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="cornerRadius">@dimen/corner_radius_16</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/indentation_8</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextMedium22BaseStyle</item>
    </style>

    <style name="BtnMainScreenColorOnSecondaryStyle" parent="BtnMainScreenBaseStyle">
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="BtnPlaylistBaseStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="cornerRadius">@dimen/corner_radius_8</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextMedium16BaseStyle</item>
    </style>

    <style name="BtnPlaylistColorStyle" parent="BtnPlaylistBaseStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/create_playlist_btn_color</item>
    </style>

    <style name="MenuItemBaseStyle" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">center_vertical</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textAppearance">@style/TextRegular16BaseStyle</item>
    </style>

    <style name="MenuItemColorOnSecondaryStyle" parent="MenuItemBaseStyle">
        <item name="drawableTint">?attr/colorOnSecondary</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SwitchColorStyle" parent="MenuItemColorOnSecondaryStyle">
        <item name="thumbTint">@color/gray_400</item>
        <item name="trackTint">@color/gray_50</item>
        <item name="android:layout_gravity">end</item>
    </style>


    <style name="TextRegular11BaseStyle">
        <item name="android:textSize">@dimen/text_size_11</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">@dimen/letter_spacing_0</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">start</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextRegular11ColorOnSecondaryStyle" parent="TextRegular11BaseStyle">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="drawableTint">?attr/colorOnSecondary</item>
    </style>

    <style name="TextMedium11BaseStyle" parent="TextRegular11BaseStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="TextRegular12BaseStyle" parent="TextRegular11BaseStyle">
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextRegular12ColorOnPrimaryStyle" parent="TextRegular12BaseStyle">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TextRegular13BaseStyle" parent="TextRegular11BaseStyle">
        <item name="android:textSize">@dimen/text_size_13</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextRegular13ColorGray400Style" parent="TextRegular13BaseStyle">
        <item name="android:textColor">@color/gray_400</item>
    </style>

    <style name="TextRegular13ColorOnPrimaryStyle" parent="TextRegular13BaseStyle">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TextRegular14BaseStyle" parent="TextRegular11BaseStyle">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextRegular14ColorPrimaryStyle" parent="TextRegular14BaseStyle">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="TextMedium14BaseStyle" parent="TextRegular11BaseStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="TextMedium14ColorPrimaryStyle" parent="TextMedium14BaseStyle">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="TextMedium14ColorOnPrimaryStyle" parent="TextMedium14BaseStyle">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TextRegular16BaseStyle" parent="TextRegular11BaseStyle">
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="TextRegular16ColorStyle" parent="TextRegular16BaseStyle">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TextMedium16BaseStyle" parent="TextMedium14BaseStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextMedium19BaseStyle" parent="TextMedium14BaseStyle">
        <item name="android:textSize">@dimen/text_size_19</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextMedium19ColorOnPrimaryStyle" parent="TextMedium19BaseStyle">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TextMedium22BaseStyle" parent="TextMedium14BaseStyle">
        <item name="android:textSize">@dimen/text_size_22</item>
    </style>

    <style name="TextMedium22ColorOnPrimaryStyle" parent="TextMedium22BaseStyle">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="EditTextBaseStyle" parent="Widget.AppCompat.EditText">
        <item name="android:drawablePadding">@dimen/indentation_8</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:inputType">text</item>
        <item name="android:paddingHorizontal">@dimen/indentation_12</item>
        <item name="android:background">@drawable/search_line_background</item>
        <item name="android:textCursorDrawable">@drawable/ic_cursor_22</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">30</item>
        <item name="android:textAppearance">@style/TextRegular16BaseStyle</item>
    </style>

    <style name="EditTextSearchBaseStyle" parent="EditTextBaseStyle">
        <item name="android:background">@drawable/search_line_background</item>
        <item name="android:textCursorDrawable">@drawable/ic_cursor_22</item>
    </style>

    <style name="EditTextPlaylistBaseStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textAppearance">@style/TextRegular16ColorStyle</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">30</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="EditTextSearchColorStyle" parent="EditTextSearchBaseStyle">
        <item name="android:textColorHint">?attr/colorOnSecondary</item>
        <item name="android:drawableTint">?attr/colorOnSecondary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="IconBaseStyle">
        <item name="android:tint">?attr/colorOnSecondary</item>
    </style>

    <style name="BtnCommonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="cornerRadius">@dimen/corner_radius_54</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextMedium14BaseStyle</item>
    </style>

    <style name="BtnCommonColorStyle" parent="BtnCommonStyle">
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="BottomNavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="itemTextColor">@color/bottom_navigation_view_item_color</item>
        <item name="itemIconTint">@color/bottom_navigation_view_item_color</item>
        <item name="itemTextAppearanceActive">@style/TextRegular12ColorOnPrimaryStyle</item>
        <item name="itemTextAppearanceInactive">@style/TextRegular12ColorOnPrimaryStyle</item>
        <item name="itemTextAppearanceActiveBoldEnabled">false</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="boxStrokeColor">@color/box_color_empty_text</item>
        <item name="hintTextColor">@color/hint_color_empty_text</item>
        <item name="android:textColorHint">?attr/colorOnPrimary</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/corner_radius_4</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corner_radius_4</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/corner_radius_4</item>
        <item name="boxCornerRadiusTopStart">@dimen/corner_radius_4</item>
        <item name="cursorColor">@color/blue_700</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/gray_900</item>
        <item name="buttonBarNeutralButtonStyle">@style/NeutralBtnStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveBtnStyle</item>
    </style>

    <style name="PositiveBtnStyle">
        <item name="android:backgroundTint">@color/blue_700</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/TextRegular16BaseStyle</item>
    </style>

    <style name="NeutralBtnStyle">
        <item name="android:backgroundTint">@color/gray_900</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/TextRegular16BaseStyle</item>
    </style>

</resources>