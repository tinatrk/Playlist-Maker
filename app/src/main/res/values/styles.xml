<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ScreenStyle">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="ToolbarBaseStyle" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.Toolbar.Title</item>
    </style>

    <style name="ToolbarColorStyle" parent="ToolbarBaseStyle">
        <item name="titleTextColor">?attr/colorOnPrimary</item>
    </style>

    <style name="ToolbarWithIconBaseStyle" parent="ToolbarBaseStyle">
        <item name="navigationIcon">@drawable/ic_arrow_back</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="titleMarginStart">@dimen/margin_horizontal_8</item>
    </style>

    <style name="ToolbarWithIconColorStyle" parent="ToolbarWithIconBaseStyle">
        <item name="navigationIconTint">?attr/colorOnPrimary</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TextAppearance.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">@dimen/letter_spacing</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:gravity">start</item>
    </style>


    <style name="BtnMainScreenBaseStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="cornerRadius">@dimen/corner_radius_16</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_indentation_8</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextMedium22BaseStyle</item>
    </style>

    <style name="BtnMainScreenColorStyle" parent="BtnMainScreenBaseStyle">
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>


    <style name="MenuItemBaseStyle" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">center_vertical</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textAppearance">@style/TextRegular16BaseStyle</item>
    </style>

    <style name="MenuItemColorStyle" parent="MenuItemBaseStyle">
        <item name="drawableTint">?attr/colorOnSecondary</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SwitchColorStyle" parent="MenuItemColorStyle">
        <item name="thumbTint">@color/gray_400</item>
        <item name="trackTint">@color/gray_50</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="TextRegular16BaseStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">@dimen/letter_spacing</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:gravity">start</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextRegular11BaseStyle" parent="TextRegular16BaseStyle">
        <item name="android:textSize">@dimen/text_size_11</item>
    </style>

    <style name="TextRegular11ColorStyle" parent="TextRegular11BaseStyle">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="drawableTint">?attr/colorOnSecondary</item>
    </style>

    <style name="TextMedium14BaseStyle" parent="TextRegular16BaseStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="TextMedium14ColorStyle" parent="TextMedium14BaseStyle">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="TextMedium19BaseStyle" parent="TextMedium14BaseStyle">
        <item name="android:textSize">@dimen/text_size_19</item>
    </style>

    <style name="TextMedium19ColorStyle" parent="TextMedium19BaseStyle">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TextMedium22BaseStyle" parent="TextMedium14BaseStyle">
        <item name="android:textSize">@dimen/text_size_22</item>
    </style>

    <style name="EditTextBaseStyle" parent="Widget.AppCompat.EditText">
        <item name="android:drawablePadding">@dimen/icon_indentation_8</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:inputType">text</item>
        <item name="android:paddingHorizontal">@dimen/margin_horizontal_12</item>
        <item name="android:background">@drawable/search_line_background</item>
        <item name="android:textCursorDrawable">@drawable/ic_cursor</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">30</item>
        <item name="android:textAppearance">@style/TextRegular16BaseStyle</item>
    </style>

    <style name="EditTextColorStyle" parent="EditTextBaseStyle">
        <item name="android:textColorHint">?attr/colorOnSecondary</item>
        <item name="android:drawableTint">?attr/colorOnSecondary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="IconBaseStyle">
        <item name="android:tint">?attr/colorOnSecondary</item>
    </style>

    <style name="BtnUpdateStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="cornerRadius">@dimen/corner_radius_54</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextMedium14BaseStyle</item>
    </style>

    <style name="BtnUpdateColorStyle" parent="BtnUpdateStyle">
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

</resources>