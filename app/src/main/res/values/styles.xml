<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ToolbarBaseStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="titleTextAppearance">@style/TextAppearance.Toolbar.Title</item>
    </style>

    <style name="ToolbarColorStyle" parent="ToolbarBaseStyle">
        <item name="titleTextColor">?attr/colorOnPrimary</item>
    </style>

    <style name="ToolbarWithIconBaseStyle" parent="ToolbarBaseStyle">
        <item name="navigationIcon">@drawable/ic_arrow_back</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="titleMarginStart">@dimen/toolbar_title_margin_start</item>
    </style>

    <style name="ToolbarWithIconColorStyle" parent="ToolbarWithIconBaseStyle">
        <item name="navigationIconTint">?attr/colorOnPrimary</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TextAppearance.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">@dimen/letter_spacing</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:gravity">start</item>
    </style>


    <style name="BtnMainScreenBaseStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">@dimen/main_screen_button_margin_top</item>
        <item name="android:layout_marginHorizontal">@dimen/screen_padding_horizontal</item>
        <item name="cornerRadius">@dimen/main_screen_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">@dimen/letter_spacing</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BtnMainScreenColorStyle" parent="BtnMainScreenBaseStyle">
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>


    <style name="MenuItemBaseStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_screen_menu_item_height</item>
        <item name="android:layout_marginStart">@dimen/settings_screen_menu_item_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/settings_screen_menu_item_margin_end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textAppearance">@style/TextBaseStyle</item>
    </style>

    <style name="MenuItemColorStyle" parent="MenuItemBaseStyle">
        <item name="drawableTint">?attr/colorOnSecondary</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="TextBaseStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">@dimen/letter_spacing</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:gravity">start</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="EditTextBaseStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/edit_text_height</item>
        <item name="android:drawablePadding">@dimen/icon_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:inputType">text</item>
        <item name="android:paddingHorizontal">@dimen/edit_text_padding_horizontal</item>
        <item name="android:background">@drawable/search_line_background</item>
        <item name="android:textCursorDrawable">@drawable/ic_cursor</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">30</item>
        <item name="android:textAppearance">@style/TextBaseStyle</item>
    </style>

    <style name="EditTextColorStyle" parent="EditTextBaseStyle">
        <item name="android:textColorHint">?attr/colorOnSecondary</item>
        <item name="android:drawableTint">?attr/colorOnSecondary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>


</resources>