<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MenuItemStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_screen_menu_item_height</item>
        <item name="android:layout_marginStart">@dimen/settings_screen_menu_item_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/settings_screen_menu_item_margin_end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textAppearance">@style/TextStyleBase</item>
        <item name="drawableTint">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/search_line_background</item>
        <item name="android:drawablePadding">@dimen/icon_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:inputType">text</item>
        <item name="android:paddingHorizontal">@dimen/edit_text_padding_horizontal</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">15</item>
        <item name="android:textAppearance">@style/TextStyleBase</item>
        <item name="android:textColorHint">?attr/colorOnSecondary</item>
        <item name="android:drawableTint">?attr/colorOnSecondary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>
</resources>