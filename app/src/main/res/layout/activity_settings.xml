<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings_screen"
    style="@style/ScreenStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SettingsActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_settings_screen"
        style="@style/ToolbarWithIconColorStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        app:title="@string/settings_button_text" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch_mode"
        style="@style/SwitchColorStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/selection_item_height"
        android:layout_marginStart="@dimen/margin_horizontal_16"
        android:layout_marginTop="@dimen/margin_top_24"
        android:layout_marginEnd="@dimen/margin_horizontal_12"
        android:contentDescription="@string/switch_mode_desc"
        android:text="@string/dark_mode" />

    <TextView
        android:id="@+id/tw_share_app"
        style="@style/MenuItemColorStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/selection_item_height"
        android:layout_marginStart="@dimen/margin_horizontal_16"
        android:layout_marginEnd="@dimen/margin_horizontal_12"
        android:text="@string/share_app"
        app:drawableEndCompat="@drawable/ic_share" />

    <TextView
        android:id="@+id/tw_support"
        style="@style/MenuItemColorStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/selection_item_height"
        android:layout_marginStart="@dimen/margin_horizontal_16"
        android:layout_marginEnd="@dimen/margin_horizontal_12"
        android:text="@string/support"
        app:drawableEndCompat="@drawable/ic_support" />

    <TextView
        android:id="@+id/tw_user_agreement"
        style="@style/MenuItemColorStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/selection_item_height"
        android:layout_marginStart="@dimen/margin_horizontal_16"
        android:layout_marginEnd="@dimen/margin_horizontal_12"
        android:text="@string/user_agreement"
        app:drawableEndCompat="@drawable/ic_arrow_forward" />

</LinearLayout>
