<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/settings_screen_background"
    android:orientation="vertical"
    tools:context=".SettingsActivity"
    android:id="@+id/settings_screen">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="4dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/settings_screen_title_size"
            android:layout_height="@dimen/settings_screen_title_size"
            android:id="@+id/img_view_back_settings_screen"
            android:scaleType="center"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/settings_screen_text"
            android:contentDescription="@string/arrow_back_button_desc"
            android:foreground="?attr/selectableItemBackground"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/settings_screen_title_size"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingHorizontal="12dp"
            android:text="@string/settings_button_text"
            android:textColor="@color/settings_screen_text"
            android:textSize="@dimen/title_text_size" />

    </LinearLayout>


    <androidx.appcompat.widget.SwitchCompat
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_screen_menu_item_height"
        android:id="@+id/switch_mode"
        android:layout_gravity="end"
        android:layout_marginTop="24dp"
        android:layout_marginStart="@dimen/settings_screen_menu_item_margin_start"
        android:layout_marginEnd="@dimen/settings_screen_menu_item_margin_end"
        android:text="@string/dark_mode"
        android:textAllCaps="false"
        android:textColor="@color/settings_screen_text"
        android:textSize="@dimen/settings_screen_menu_item_text_size"
        app:thumbTint="@color/settings_screen_switch_thumb"
        app:trackTint="@color/settings_screen_switch_track"
        android:contentDescription="@string/switch_mode_desc"
        android:foreground="?attr/selectableItemBackground"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_screen_menu_item_height"
        android:layout_marginStart="@dimen/settings_screen_menu_item_margin_start"
        android:layout_marginEnd="@dimen/settings_screen_menu_item_margin_end"
        android:text="@string/share_app"
        android:textColor="@color/settings_screen_text"
        android:textSize="@dimen/settings_screen_menu_item_text_size"
        android:gravity="center_vertical"
        app:drawableEndCompat="@drawable/ic_share"
        app:drawableTint="@color/settings_screen_icons"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_screen_menu_item_height"
        android:layout_marginStart="@dimen/settings_screen_menu_item_margin_start"
        android:layout_marginEnd="@dimen/settings_screen_menu_item_margin_end"
        android:text="@string/support"
        android:textColor="@color/settings_screen_text"
        android:textSize="@dimen/settings_screen_menu_item_text_size"
        android:gravity="center_vertical"
        app:drawableEndCompat="@drawable/ic_support"
        app:drawableTint="@color/settings_screen_icons"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_screen_menu_item_height"
        android:layout_marginStart="@dimen/settings_screen_menu_item_margin_start"
        android:layout_marginEnd="@dimen/settings_screen_menu_item_margin_end"
        android:text="@string/user_agreement"
        android:textColor="@color/settings_screen_text"
        android:textSize="@dimen/settings_screen_menu_item_text_size"
        android:gravity="center_vertical"
        app:drawableEndCompat="@drawable/ic_user_agreement"
        app:drawableTint="@color/settings_screen_icons"
        />

</LinearLayout>