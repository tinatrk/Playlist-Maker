<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/settings_screen_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/setting_screen_title_size"
            android:layout_height="@dimen/setting_screen_title_size"
            android:scaleType="center"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/settings_screen_text"
            android:contentDescription="@string/arrow_back_button_desc"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/setting_screen_title_size"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingHorizontal="12dp"
            android:text="@string/settings_button_text"
            android:textColor="@color/settings_screen_text"
            android:textSize="@dimen/title_text_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_screen_menu_item_height"
        android:layout_marginStart="@dimen/setting_screen_menu_item_margin_start"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="@dimen/setting_screen_menu_item_margin_end" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/dark_mode"
            android:textColor="@color/settings_screen_text"
            android:textSize="@dimen/setting_screen_menu_item_text_size" />

        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switch_mode"
            android:layout_gravity="center"
            android:checked="false"
            app:thumbTint="@color/settings_screen_switch_thumb"
            app:trackTint="@color/settings_screen_switch_track"
            android:contentDescription="@string/switch_mode_desc"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_screen_menu_item_height"
        android:layout_marginStart="@dimen/setting_screen_menu_item_margin_start"
        android:layout_marginEnd="@dimen/setting_screen_menu_item_margin_end"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/share_app"
            android:textColor="@color/settings_screen_text"
            android:textSize="@dimen/setting_screen_menu_item_text_size" />

        <ImageView
            android:layout_width="@dimen/setting_screen_button_size"
            android:layout_height="@dimen/setting_screen_button_size"
            android:scaleType="center"
            android:src="@drawable/ic_share"
            app:tint="@color/settings_screen_icons"
            android:contentDescription="@string/share_button_desc"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_screen_menu_item_height"
        android:layout_marginStart="@dimen/setting_screen_menu_item_margin_start"
        android:layout_marginEnd="@dimen/setting_screen_menu_item_margin_end"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/support"
            android:textColor="@color/settings_screen_text"
            android:textSize="@dimen/setting_screen_menu_item_text_size" />

        <ImageView
            android:layout_width="@dimen/setting_screen_button_size"
            android:layout_height="@dimen/setting_screen_button_size"
            android:scaleType="center"
            android:src="@drawable/ic_support"
            app:tint="@color/settings_screen_icons"
            android:contentDescription="@string/support_button_desc"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_screen_menu_item_height"
        android:layout_marginStart="@dimen/setting_screen_menu_item_margin_start"
        android:layout_marginEnd="@dimen/setting_screen_menu_item_margin_end"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/user_agreement"
            android:textColor="@color/settings_screen_text"
            android:textSize="@dimen/setting_screen_menu_item_text_size" />

        <ImageView
            android:layout_width="@dimen/setting_screen_button_size"
            android:layout_height="@dimen/setting_screen_button_size"
            android:scaleType="center"
            android:src="@drawable/ic_user_agreement"
            app:tint="@color/settings_screen_icons"
            android:contentDescription="@string/user_agreement_desc"/>

    </LinearLayout>
</LinearLayout>