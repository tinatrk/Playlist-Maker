<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_screen"
    tools:context=".MainActivity"
    android:theme="@style/Theme.MainActivity"
    style="@style/ScreenStyle"
    >

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_settings_screen"
        app:title="@string/app_name"
        android:layout_marginBottom="8dp"
        style="?attr/toolbarStyle"
        />

    <Button
        android:id="@+id/btn_search"
        android:contentDescription="@string/search_button_desc"
        android:text="@string/search_button_text"
        app:icon="@drawable/ic_search"
        style="?attr/buttonStyle"/>

    <Button
        android:id="@+id/btn_library"
        android:text="@string/library_button_text"
        app:icon="@drawable/ic_library"
        android:contentDescription="@string/library_button_desc"
        android:textAppearance="@style/TextStyleBase"
        style="?attr/buttonStyle"/>

    <Button
        android:id="@+id/btn_settings"
        android:layout_marginBottom="28dp"
        android:text="@string/settings_button_text"
        app:icon="@drawable/ic_settings"
        android:contentDescription="@string/settings_button_desc"
        style="?attr/buttonStyle"/>

</LinearLayout>


