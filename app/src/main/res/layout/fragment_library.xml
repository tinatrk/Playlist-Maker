<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/library_screen"
    style="@style/ScreenCommonStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".library.ui.fragment.LibraryFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_library_screen"
        style="@style/ToolbarColorOnPrimaryStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height_56"
        app:title="@string/library_screen_title" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_library"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_layout_height_48"
        android:background="?attr/colorPrimary"
        app:tabIndicator="@drawable/tab_indicator"
        app:tabIndicatorColor="?attr/colorOnPrimary"
        app:tabTextAppearance="@style/TextMedium14ColorOnPrimaryStyle"
        app:tabTextColor="?attr/colorOnPrimary" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager_library"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" />
</LinearLayout>